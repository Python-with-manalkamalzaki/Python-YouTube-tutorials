#random module  -- important methods
import random  # imports the random module

print(random.random())   # returns a random float between 0.0 and 1.0

print(random.randint(2, 10))   # returns a random integer between 2 and 10
answer1=random.randint(2, 10) ;print(answer1)  
print(random.uniform(2, 10))   # returns a random float between 2 and 10

fruits=["orange", "apple", "banana"]
print(random.choice(fruits))          # chooses randomly from a list
answer2=random.choice(fruits); print(answer2)  print(random.choices(fruits, k=2))      

print(random.sample(fruits, 2))         # makes 2 random choices
print(random.sample(["orange", "apple", "banana", "fig"], 2))  print(random.sample(range(1,10),4))
print(random.sample([1,2,3,4,5,6,7],4))  #we can use the list directly

list=[1,2,3,4,5]
fruits=["orange", "apple", "banana"]
random.shuffle(list) ;print(list)
random.shuffle(fruits)  ;print(fruits)

#"seeding" the random number generator means setting a starting point for the random sequence.
# useful for simulation, games, --etc.
random.seed(30)
print(random.randint(1,20))  
print(random.uniform(1,50))  
print(random.sample(range(1,10),4))  # gives the same result

