# lambda function is a one line function (one expression)
# it can take any number oj arguments

# function=lambda argument: expression
square_area = lambda x: x**2
rectangle_area = lambda x,y: x*y
students = lambda student_1, student_2: student_1 + " and " + student_2

#function=lambda arguments: result if condition else another result
#is_adult = lambda age: print("you are adult") if age >=18 else print("you are under age")
is_adult = lambda age: True if age >=18 else False

print(square_area(5))
print(rectangle_area(3,4))
print(students("alice", "sue"))
#is_adult(15)
print(is_adult(12))



